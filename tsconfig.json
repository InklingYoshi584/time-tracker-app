{
  "compilerOptions": {
    "target": "ES2020",                // Specify modern JavaScript output
    "module": "commonjs",              // Required for Node.js/Electron
    "lib": ["ES2020", "DOM"],          // Include ES2020 and browser (DOM) APIs
    "outDir": "./dist",                // Output directory for compiled files
    "rootDir": "./src",                // Root directory for TypeScript source files
    "strict": true,
    "resolveJsonModule": true,// Enable strict type-checking
    "moduleResolution": "node",        // Resolve modules like Node.js
    "esModuleInterop": true,           // Allow default imports for CommonJS modules
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing
    "skipLibCheck": true               // Skip type checking for node_modules
  },
  "include": ["src/**/*", "src/types/**/*"],             // Include all source files in the `src/` directory
  "exclude": ["node_modules"]          // Exclude dependencies from compilation
}